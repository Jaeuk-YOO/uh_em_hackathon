<!DOCTYPE html>
<html>
  <head>
    <title>UhEm</title>
    <%= csrf_meta_tags %>

    <meta charset="utf-8">
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/images/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>uh-em?</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag 'application', media: 'all'%>

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <script src="/assets/jquery-3.1.1.min.js"></script>
    <script src="/assets/moment.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <!-- bootstrap CDN -->
    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    <!-- uh-em CSS -->
    <link rel="stylesheet" href="/assets/uh_em.scss">

  </head>

  <body>
    <div class="index">
      <div class="container index__logo">
        <div class="row justify-content-center">
          <div class="index-logo col-8 col-sm-8 col-lg-10 col-xl-12"></div>
        </div>
      </div>

    <div class="buttons container">
      <div class="price row justify-content-center">

        <div class="price-1 row my-3 col-8 col-sm-10 col-lg-12 col-xl-12">
          <label for="pricebottom" class="col-4 col-form-label my-auto">최저가</label>
          <div class="col-8 my-auto">
            <input class="price_low" type="number" placeholder="가격입력" id="priceLow">
          </div>
        </div>

        <div class="price-2 row my-3 col-8 col-sm-10 col-lg-12 col-xl-12">
          <label for="pricetop" class="col-4 col-form-label my-auto">최고가</label>
          <div class="col-8 my-auto">
            <input class="price_top" type="number" placeholder="가격입력" id="priceTop">
          </div>
        </div>

        <div class="location row my-3 col-8 col-sm-10 col-lg-12 col-xl-12">
        <!-- <label for="userlocation" class="col-4 col-form-label my-auto">당신의 위치</label> -->
            <div class="col-12 my-auto">
              <input class="user_location" type="text" placeholder="위치를 입력해주세요." id="userLocation">
            </div>
        </div>

        <div class="submitbutton row justify-content-center my-3 col-8 col-sm-10 col-lg-12 col-xl-12">
          <button type="submit" class="btn my-auto btn-block">Submit</button>
        </div>

      </div>
    </div>
 </div>

</body>
</html>
